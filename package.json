{
  "name": "storybook-for-styleguide",
  "author": "Kazuhiro Kobayashi <info@kzhrk.com> (https://github.com/kzhrk)",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@storybook/addon-notes": "^5.0.0",
    "@storybook/html": "^5.0.0",
    "autoprefixer": "^9.4.2",
    "babel-loader": "^8.0.4",
    "css-loader": "^2.1.0",
    "cssnano": "^4.1.7",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "node-sass": "^4.10.0",
    "postcss-cli": "^6.0.1",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "pug-loader": "^2.4.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "private": true,
  "scripts": {
    "build": "npm run pug:pro & npm run webpack:pro & npm run sass:pro && npm run postcss",
    "build:storybook": "build-storybook -o ./docs",
    "postcss": "postcss ./public/css/*.css -c ./postcss.config.js --no-map -r",
    "pug:dev": "pug ./src/pug/product -Pwo ./public",
    "pug:pro": "pug ./src/pug/product -o ./public",
    "sass:dev": "node-sass ./src/scss/style.scss -o ./public/css && node-sass ./src/scss/style.scss -wo ./public/css",
    "sass:pro": "node-sass ./src/scss/style.scss -o ./public/css",
    "start": "npm run pug:dev & npm run sass:dev & npm run webpack:dev",
    "storybook": "start-storybook -p 3001 -c .storybook",
    "webpack:dev": "NODE_ENV=development webpack -w & webpack-dev-server",
    "webpack:pro": "NODE_ENV=production webpack --display-used-exports"
  }
}
